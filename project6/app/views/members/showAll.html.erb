<h2> Members Table </h2>

<table border="1">
    <tr>
        <td> First Name </td> <td> Last Name </td>  <td> Role </td> <td> Email </td>
    </tr>


    
    <% User.all.each do |user| %>
        <tr>
            <td> <%= user.fname %> </td>
            <td> <%= user.lname %> </td>
            <td>
                <% if user.instructor %>
                    Instructor
                <% else %>
                    Student
                <% end %>

            </td>
            <td> <%= user.email %> </td>
        </tr>
    <% end %>
    
    
</table>